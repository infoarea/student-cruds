

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <a class="btn btn-primary" href="/student">Back</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    
                    <h3>Create New Student</h3>

                    <form action="/student/create" method="POST" enctype="multipart/form-data">
                        <div class="my-3">
                            <label for="">Name</label>
                            <input name="name" class="form-control" type="text">
                        </div>
                        
                        <div class="my-3">
                            <label for="">Email</label>
                            <input name="email" class="form-control" type="text">
                        </div>
                        
                        <div class="my-3">
                            <label for="">Cell</label>
                            <input name="cell" class="form-control" type="text">
                        </div>
                        
                        <div class="my-3">
                            <label for="">Location</label>
                            <select class="form-control" name="location" id="">
                                <option value="">--select--</option>
                                <option value="Demra">Demra</option>
                                <option value="Jatrabari">Jatrabari</option>
                                <option value="Uttara">Uttara</option>
                                <option value="Gulshan">Gulshan</option>
                                <option value="Mirpur">Mirpur</option>
                            </select>
                        </div>
                        <div class="my-3">
                            
                            <img class="preview_photo" src="" alt="">
                        </div>
                        <div class="my-3">
                            <label for="">Photo</label>
                            <br>
                            <label for="student_img">
                                <img class="file_icon" src="https://www.freeiconspng.com/thumbs/camera-icon/camera-icon-21.png" alt="">
                            </label>
                            <input name="student_image" id="student_img" type="file">
                        </div>
                        
                        <div class="my-3">
                            <input class="form-control btn btn-primary" value="Create Now!" type="submit">
                        </div>
                    </form>
                    

                </div>
            </div>
        </div>
    </div>
</div>