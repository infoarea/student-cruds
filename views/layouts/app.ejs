<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="//cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/5.7.1/css/all.min.css"/>

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css"/>
 

    <link rel="stylesheet" href="/css/style.css">
</head>
<body>

    <%- body  %> 

    <script src="//cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//code.jquery.com/jquery-3.6.1.min.js"></script>
    <script type="text/javascript" src="//cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.js"></script>

    <script>

        //Data Table
        $('.student_table').DataTable();

        //Preview images
        const student_img = document.querySelector('#student_img');
        const preview_photo = document.querySelector('.preview_photo');

        if (student_img) {
            student_img.onchange = (e) => {
           
                const imgLink = URL.createObjectURL(e.target.files[0]);

                preview_photo.setAttribute('src', imgLink);

            }
        }
        
        //delet student

        const delete_btn = document.querySelectorAll('.delete_btn');

        if (delete_btn) {

            delete_btn.forEach(item => {

            item.onclick=()=>{

                const confirmm = confirm('Are you sure?');

                if (confirmm) {
                return true; 
                }else{
                    return false;
                }


            }
            
            });

        }
        
        
       
        

    </script>
</body>
</html>